{
  "version": 2,
  "builds": [
    {
      "src": "api/edhrec_service.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/edhrec_service.py"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "CORS_ORIGINS": "https://your-app.vercel.app"
  },
  "functions": {
    "api/edhrec_service.py": {
      "runtime": "python3.9"
    }
  }
}